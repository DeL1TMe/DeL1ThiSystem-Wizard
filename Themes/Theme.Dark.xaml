<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="C.WindowBg">#171826</Color>
    <Color x:Key="C.CardBg">#1A1E2D</Color>
    <Color x:Key="C.FooterBar">#121622</Color>
    <Color x:Key="C.Accent">#2064CD</Color>
    <Color x:Key="C.WindowBorder">#3A445A</Color>
    <Color x:Key="C.PopupBg">#1A1E2D</Color>
    <Color x:Key="C.PopupBorder">#2A3345</Color>
    <Color x:Key="C.SecondaryButtonBg">#2AFFFFFF</Color>
    <Color x:Key="C.ToggleTrack">#2AFFFFFF</Color>
    <Color x:Key="C.ToggleTrackDisabled">#1FFFFFFF</Color>
    <Color x:Key="C.ScrollTrack">#1EFFFFFF</Color>
    <Color x:Key="C.ScrollThumb">#80FFFFFF</Color>
    <Color x:Key="C.ScrollThumbHover">#A0FFFFFF</Color>
    <Color x:Key="C.ScrollThumbDrag">#B0FFFFFF</Color>

    <Color x:Key="C.CardBg_00">#001A1E2D</Color>
    <Color x:Key="C.CardBg_FF">#FF1A1E2D</Color>

    <Color x:Key="C.TextPrimary">#FFFFFF</Color>
    <Color x:Key="C.TextSecondary">#B8C0CC</Color>
    <Color x:Key="C.TextMuted">#8A93A3</Color>

    <SolidColorBrush x:Key="Brush.WindowBg" Color="{StaticResource C.WindowBg}"/>
    <SolidColorBrush x:Key="Brush.CardBg" Color="{StaticResource C.CardBg}"/>
    <SolidColorBrush x:Key="Brush.FooterBar" Color="{StaticResource C.FooterBar}"/>
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource C.Accent}"/>
    <SolidColorBrush x:Key="Brush.WindowBorder" Color="{StaticResource C.WindowBorder}"/>
    <SolidColorBrush x:Key="Brush.PopupBg" Color="{StaticResource C.PopupBg}"/>
    <SolidColorBrush x:Key="Brush.PopupBorder" Color="{StaticResource C.PopupBorder}"/>
    <SolidColorBrush x:Key="Brush.SecondaryButtonBg" Color="{StaticResource C.SecondaryButtonBg}"/>
    <SolidColorBrush x:Key="Brush.ToggleTrack" Color="{StaticResource C.ToggleTrack}"/>
    <SolidColorBrush x:Key="Brush.ToggleTrackDisabled" Color="{StaticResource C.ToggleTrackDisabled}"/>
    <SolidColorBrush x:Key="Brush.ScrollTrack" Color="{StaticResource C.ScrollTrack}"/>
    <SolidColorBrush x:Key="Brush.ScrollThumb" Color="{StaticResource C.ScrollThumb}"/>
    <SolidColorBrush x:Key="Brush.ScrollThumbHover" Color="{StaticResource C.ScrollThumbHover}"/>
    <SolidColorBrush x:Key="Brush.ScrollThumbDrag" Color="{StaticResource C.ScrollThumbDrag}"/>

    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource C.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource C.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.TextMuted" Color="{StaticResource C.TextMuted}"/>

    <LinearGradientBrush x:Key="Brush.BottomFade" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource C.CardBg_00}" Offset="0"/>
        <GradientStop Color="{StaticResource C.CardBg_FF}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.TopFade" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="{StaticResource C.CardBg_00}" Offset="0"/>
        <GradientStop Color="{StaticResource C.CardBg_FF}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>
